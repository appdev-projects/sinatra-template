<% if @account_number.to_i == 0 || !@account_number.to_s.match(/\d/) || $accounts[@account_number.to_i - 1].nil? %>

<h1>Information! You entered an invalid bank account number.</h1>
        <h2> Please try re-submitting your query with a valid bank account number.</h2>
         <p>
         <a href="/">Home page</a> 

<% elsif @amount.to_i <= 0 %>
         <h2>Error! Please enter a deposit amount greater than $0.</h2>
         <p>
         <a href="/">Home page</a>
<% else %>
<% $accounts[@account_number.to_i - 1] = $accounts[@account_number.to_i - 1].to_f + @amount.to_f %>
<h1>Your deposit was successful!</h1>
<h2>Your account number is: <%= @account_number %></h2>
<p>
<h2>Your new account balance is: $<%= $accounts[@account_number.to_i - 1] %></h2>
<p>
<div><a href="/">Home page</a>
<% end %>
